{
  "name": "chat-linker",
  "version": "1.0.0",
  "main": "index.js",
  "description": "It makes a bridge between different IM-networks via chat-bot",
  "license": "MIT",
  "repository": "jt3k/chat-linker",
  "author": {
    "name": "Andrey Gurtovoy",
    "email": "iyntx@ya.ru",
    "url": "github.com/jt3k"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "xo",
    "prod": "cross-env NODE_ENV=prod node app.js",
    "dev": "cross-env NODE_ENV=dev node --inspect app.js",
    "precommit": "npm test",
    "prepush": "npm test",
    "postreceive": "./crypter.js dec"
  },
  "keywords": [
    "jabber",
    "telegram",
    "chats",
    "groupchats",
    "bridge"
  ],
  "dependencies": {
    "cross-env": "^5.0.0",
    "node-xmpp": "^1.0.4",
    "telegraf": "^3.3.1"
  },
  "devDependencies": {
    "husky": "^0.11.9",
    "xo": "^0.17.1"
  },
  "xo": {
    "esnext": true,
    "envs": ["node"],
    "rules": {
      "camelcase": ["error", {"properties": "never"}],
      "import/no-unresolved": [0],
      "import/no-unassigned-import": [0],
      "linebreak-style": 0
    },
    "space": true,
    "semicolon": true
  }
}
